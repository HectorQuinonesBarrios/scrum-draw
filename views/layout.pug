doctype html
html
  head
    title= ScrumMaster
    //Bustra
    block head
      link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
      link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous")
      script(src="https://use.fontawesome.com/8cdb8948b9.js")
      link(rel='stylesheet' href='/stylesheets/style.css')
      link(rel='stylesheet' href='/bootstrap-select/dist/css/bootstrap-select.min.css')


  body
    div(class='container')
      nav.navbar.navbar-inverse.navbar-fixed-top
        .container
          .navbar-header
            button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#navbar' aria-expanded='false' aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/') Scrum
          #navbar.collapse.navbar-collapse
            ul.nav.navbar-nav
              li
                a(href='/') Home
              li
                a(href='/projects') Proyectos
            ul.nav.navbar-nav.navbar-right
              if !usuario || !usuario._id
                a.btn.btn-primary.navbar-btn(href='/login') Iniciar sesión
                a.btn.btn-success.navbar-btn(href='/users') Regístrate
              else
                li.dropdown
                  a.dropdown-toggle(href='#' data-toggle='dropdown' role='button' aria-haspopup='true' aria-expanded='false')
                    | #{usuario.local.nombre}
                    span.caret
                  ul.dropdown-menu
                    li
                        a(href=`/users/${usuario._id}/edit`) Modificar usuario
                    li
                      form(action='/logout' method='POST')
                        button(type='submit' class='btn btn-link') Logout

    if(status != undefined)
      div(class=`alert alert-${status.code}`) #{status.message}
    block content



    block script
      script(src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous")
      script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous")
      script(src='/bootstrap-select/dist/js/bootstrap-select.min.js')
