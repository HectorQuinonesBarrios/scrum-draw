doctype html
html
  head
    title= ScrumMaster
    //Bustra
    block head
      link(rel='stylesheet', href='/bootstrap/dist/css/bootstrap.min.css')
      link(rel='stylesheet', href='/bootstrap/dist/css/bootstrap-theme.min.css')
      link(rel='stylesheet', href='/stylesheets/style.css')

  body
    div(class='container')
      // Fixed navbar
      nav.navbar.navbar-inverse.navbar-fixed-top
        .container
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='#') Scrum
          #navbar.collapse.navbar-collapse
            ul.nav.navbar-nav
              li.active
                a(href='#') Home
              li
                a(href='/projects') Proyectos
              li
                a(href='#contact') Tablero
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
                  | Cosas
                  span.caret
                ul.dropdown-menu(role='menu')
                  li
                    a(href='#') Action
                  li
                    a(href='#') Another action
                  li
                    a(href='#') Something else here
                  li.divider
                  li.dropdown-header Nav header
                  li
                    a(href='#') Separated link
                  li
                    a(href='#') One more separated link
            ul.nav.navbar-nav.navbar-right
              a.btn.btn-success.navbar-btn(href='/login') Iniciar sesión
              a.btn.btn-danger.navbar-btn(href='/users') Regístrate

    block content



    block script
      script(src='/jquery/dist/jquery.min.js')
      script(src='/bootstrap/dist/js/bootstrap.min.js' type='text/javascript')
