.col-sm-12
	.row
		.col-sm-12.form-group
			input(value=`${usuario.local.id}` name='id' type='hidden')
			input(value=`${usuario.local.social}` name='social' type='hidden')
			label Nombre
			|
			input.form-control(value=`${usuario.local.nombre}` required='required' name='nombre' type='text' placeholder='Nombre Completo..')
	.row
		.col-sm-6.form-group
			label Dirección
			|
			textarea.form-control(required='required' name='domicilio' placeholder='Domicilio..' rows='3') #{usuario.local.domicilio}
		.col-sm-6.form-group
			label Habilidades
			|
			list-selector
				yield(to='input')
					input(ref='input' class='form-control')
	.row
		.col-sm-6.form-group
			label CURP
			|
			input.form-control(value=`${usuario.local.curp}` required='required' name='curp' type='text' placeholder='CURP..')
		.col-sm-6.form-group
			label RFC
			|
			input.form-control(value=`${usuario.local.rfc}` required='required' name='rfc' type='text' placeholder='RFC..')
	.row
		.col-sm-6.form-group
			label Email
			|
			input.form-control(value=`${usuario.local.email}` required='required' name='email' type='email' pattern="[a-zA-Z0-9.-_]{1,}@[a-zA-Z.-]{2,}[.]{1}[a-zA-Z]{2,}"  placeholder='Escriba el Email..')
		.col-sm-6.form-group
			label Contraseña (Minimo 8 caracteres maximo 16)
			|
			input.form-control(required='required' name='password'  type='password' pattern="[A-Za-z0-9]{8,16}" placeholder='Escriba la contraseña..')
	button.btn.btn-lg.btn-info(type='submit') Aceptar

script(src='/riot/riot.min.js')
script(src='/list-selector/list-selector.js')
script.
	riot.mount('list-selector', {items: !{JSON.stringify(usuario.local.habilidades) || []}, name: 'habilidades', buttonName: 'habilidad', options: ['Junior', 'Senior', 'Master'], keys: ['nombre', 'rank']})
