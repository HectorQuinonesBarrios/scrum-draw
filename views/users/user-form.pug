.col-sm-12
	.row
		.col-sm-12.form-group
			label Nombre
			|
			input.form-control(value=`${usuario.nombre}`, required='required', name='nombre', type='text', placeholder='Nombre Completo..')
	.form-group
		label Dirección
		textarea.form-control(required='required', name='domicilio', placeholder='Domicilio..', rows='3') #{usuario.domicilio}
	.row
		.col-sm-6.form-group
			label CURP
			|
			input.form-control(value=`${usuario.curp}`, required='required', name='curp', type='text', placeholder='CURP..')
		.col-sm-6.form-group
			label RFC
			|
			input.form-control(value=`${usuario.rfc}`, required='required', name='rfc', type='text', placeholder='RFC..')
	.row
		.col-sm-12.form-group
			label Habilidades
			|
			textarea.form-control(required='required', name='habilidad', rows='3', placeholder='Escriba tus habilidades..')
	.row
		.col-sm-12.form-group
			label Rango
			input.form-control(required='required', name='rango', type='radio', value='Alto')
	.row
		.col-sm-6.form-group
			label Email
			|
			input.form-control(value=`${usuario.email}`, required='required', name='email', type='email', placeholder='Escriba el Email..')
		.col-sm-6.form-group
			label Contraseña
			|
			input.form-control(required='required', name='password', type='password', placeholder='Escriba la contraseña..')
	button.btn.btn-lg.btn-info(type='submit') Regístrame
