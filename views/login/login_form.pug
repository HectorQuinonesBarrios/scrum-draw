extends ../layout
block append head
  link(rel='stylesheet', href='/stylesheets/login_form.css')
  link(rel='stylesheet', href='/bootstrap-social/bootstrap-social.css')
block content
    .wrapper
      form.form-signin(action='/login' method='POST')
        h2.form-signin-heading Iniciar Sesión
        |
        input.form-control(type='email', name='email', placeholder='Email', required='required', autofocus='autofocus')
        |
        input.form-control(type='password', name='password', placeholder='Contraseña', required='required')
        |
        hr
        button(class='btn btn-lg btn-primary btn-block' type='submit') Entrar
        a(class='btn btn-block btn-social btn-facebook' href="/login/auth/facebook")
          span(class='fa fa-facebook')
          | Inicio con facebook
        a(class='btn btn-block btn-social btn-twitter' href="/login/auth/twitter")
          span(class='fa fa-twitter')
          | Inicio con twitter
        a(class='btn btn-block btn-social btn-github' href="/login/auth/github")
          span(class='fa fa-github')
          | Inicio con Github


block append script
  script(src='/javascripts/login_form.js' type='text/javascript')
